# Payload CMS secret key for encryption
PAYLOAD_SECRET=

# SMTP configuration for sending emails (e.g. for invites, password recovery)
PAYLOAD_SMTP_HOST=
PAYLOAD_SMTP_USER=
PAYLOAD_SMTP_PASS=
PAYLOAD_SMTP_PORT=

# Secret token for running cron jobs securely
CRON_SECRET=

# Public URL of your site (e.g. https://myapp.com)
